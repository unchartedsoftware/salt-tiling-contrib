            <!--<param name="ConversionPattern" value="%5p; %d{dd MMM yyyy HH:mm:ss}; %C; %m%n"/>-->
        <!--</layout>-->
    <!--</appender>-->

    <root>
        <priority value="debug"/>
        <appender-ref ref="stdout"/>
    </root>

</log4j:configuration>
